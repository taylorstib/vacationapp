		<h1 class="heading">We Are Here to Help You Plan Your Next Vacation</h1>

		<!-- Form for the destination and other trip info -->
		<div class="theform">
		<div class="pure-g">

			<form action="/budget" method="post" class="pure-form pure-form-stacked">
				<fieldset>
				 <div class="pure-g-r">

				 <div class="pure-u-1-1">
					<label><i class="fa fa-home fa-lg"> Origin </i> </label><input class="pure-input-rounded" type="text" name="origin">
					<!-- <i class="fa fa-shopping-cart fa-lg"></i> -->
				 </div>

				 <div class="pure-u-1-1">
					<label> <i class="fa fa-globe fa-lg"></i> Destination</label><input class="pure-input-rounded" type="text" name="destination">
				 </div>

				 <div class="pure-u-1-1">
				 	<!-- <span class="fa fa-paper-plane-o"></span> -->
					<label> <i class="fa fa-rocket fa-lg"></i>  Transportation</label><select name="transportation_type">
						<option value="-" selected>-</option>
						<option value="Flight">Flight</option>
						<option value="Train">Train</option>
						<option value="Car">Car</option>
						<option value="Cruise">Cruise</option>
						<option value="Bus">Bus</option>

					</select>
				 </div>

				 <div class="pure-u-1-1">
					<label> <i class="fa fa-dollar fa-lg"></i> How much can you spend on this vacation?</label><input type="number" name="budget" required>
